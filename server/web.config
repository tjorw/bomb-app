<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- ============================== -->
    <!-- 🔧 Handlers och WebDAV-stopp  -->
    <!-- ============================== -->
    <modules runAllManagedModulesForAllRequests="true">
      <!-- WebDAV tar DELETE/PUT och orsakar 405 -->
      <remove name="WebDAVModule" />
    </modules>

    <handlers>
      <remove name="WebDAV" />
      <remove name="WebDAVClassic" />
      <!-- ASP.NET Core hanterar allt -->
      <add name="aspNetCore"
           path="*"
           verb="*"
           modules="AspNetCoreModuleV2"
           resourceType="Unspecified" />
    </handlers>


    <!-- ============================== -->
    <!-- 🚀 URL Rewrite för SPA (React) -->
    <!-- ============================== -->
    <rewrite>
      <rules>
        <!-- React Router fallback -->
        <rule name="ReactRouterFallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Endast GET ska kunna rewritas -->
            <add input="{REQUEST_METHOD}" pattern="^GET$" />
            <!-- Låt riktiga filer och mappar passera -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Undanta API och SignalR -->
            <add input="{REQUEST_PATH}" pattern="^/api($|/)" negate="true" />
            <add input="{REQUEST_PATH}" pattern="^/bomhub($|/)" negate="true" />
            <add input="{REQUEST_PATH}" pattern="^/bomhub/negotiate$" negate="true" />
            <!-- Undanta statiska resurser -->
            <add input="{REQUEST_PATH}" pattern="^/assets/" negate="true" />
            <add input="{REQUEST_PATH}" pattern="\.(js|css|map|ico|png|jpg|jpeg|svg|webp|gif|woff2?)$" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>


    <!-- ============================== -->
    <!-- 🔒 Säkerhetsinställningar       -->
    <!-- ============================== -->
    <security>
      <requestFiltering allowDoubleEscaping="true">
        <!-- Tillåt DELETE/PUT/OPTIONS -->
        <verbs allowUnlisted="true">
          <add verb="DELETE" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>


    <!-- ============================== -->
    <!-- 🧠 MIME Types (säkerhetsnät)    -->
    <!-- ============================== -->
    <staticContent>
      <!-- Säkerställ att Vite-filer får rätt Content-Type -->
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
    </staticContent>


    <!-- ============================== -->
    <!-- ⚙️ ASP.NET Core Hosting         -->
    <!-- ============================== -->
    <aspNetCore processPath="dotnet"
                arguments="server.dll"
                stdoutLogEnabled="false"
                hostingModel="InProcess" />

  </system.webServer>
</configuration>
